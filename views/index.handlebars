<div class="row text-center">
  <img src="/assets/img/burger.png" alt="burger" id="burger-pic">
  <h2 class="text-center">Eat-da-Burger!</h2>
</div>
<div class="row text-center">
  <div class="col-md-6"><h2>On the Menu</h2>
<ul>
  {{#each burgers}}
 {{#unless this.devoured}}
      <li id="menu">

        <div class="row">
          <div class="col-md-2">
             <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button class="btn btn-success" type="submit">Devour!</button>
         </form>
          </div>
          <div class="col-md-6">
            <p>{{this.id}}. {{this.burger_name}}</p>
          </div>
        </div>
     </li>
      {{/unless}}
  {{/each}}
</ul></div>
   <div class="col-md-6"><h2>Devoured</h2>
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
      <li>
      
        <p>{{this.id}}. {{this.burger_name}}</p>
        
        

        <form action="/{{this.id}}?_method=DELETE" method="POST">
 
        <button type="submit">DELETE!</button>
</form>

     
      </li>
      {{/if}}
  {{/each}}
</ul></div>
</div>


<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>