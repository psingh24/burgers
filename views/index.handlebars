<ul>
  {{#each burgers}}
 {{#unless this.devoured}}
      <li>
    
        <p>{{this.id}}: {{this.burger_name}}</p>
        {{this.devoured}}
        

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="false">
          <button type="submit">Devour!</button>
         
        </form>

     
      </li>
      {{/unless}}
  {{/each}}
</ul>

<h2>Break</h2>
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
      <li>
      
        <p>{{this.id}}: {{this.burger_name}}</p>
           {{this.devoured}}
        

        <form action="/{{this.id}}?_method=PUT" method="POST">
